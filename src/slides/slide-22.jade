section
	h2 Transform
	div.example-area.example-area-transform
		button.transition.btn.transform Transform
		button.transition.btn.position   Position
	style
		|.transition {
		|   color: white;
		|   display: block;
		|   width: 7%;
		|   padding-top: 7%;		
		|   display: block;
		|   background-color: black;
		|}
	pre
		style(contenteditable="true" style="display: block;")
			|.example-area-transform { background-color: aquamarine; }
			| 
			|.transition {
			|   position: relative;
			|   top: 0; left: 0;
			|   transition: .5s linear;
			|}
			|.example-area-transform:hover .transform {
			|   transform: translate(50px, 50px);
			|}

			|.example-area-transform:hover .position {
			|   top: 50px; left: 50px;
			|}




